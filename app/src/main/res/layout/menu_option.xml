<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:background="@color/primary_dark"
    app:flexDirection="row"
    app:justifyContent="space_around"
    app:alignContent="center">

    <!-- Home Button -->
    <com.google.android.flexbox.FlexboxLayout
        style="@style/menu_btn_flexbox"
        app:flexDirection="column">
        <ImageView
            style="@style/menu_btn_img"
            android:id="@+id/img_home"
            android:src="@drawable/menu_home" />
        <TextView
            style="@style/menu_btn_text"
            android:id="@+id/text_home"
            android:text="@string/menu_home"/>
    </com.google.android.flexbox.FlexboxLayout>

    <!-- Search Button -->
    <com.google.android.flexbox.FlexboxLayout
        style="@style/menu_btn_flexbox"
        app:flexDirection="column">
        <ImageView
            style="@style/menu_btn_img"
            android:id="@+id/img_search"
            android:src="@drawable/menu_search" />
        <TextView
            style="@style/menu_btn_text"
            android:id="@+id/text_search"
            android:text="@string/menu_search"/>
    </com.google.android.flexbox.FlexboxLayout>

    <!-- Library Button -->
    <com.google.android.flexbox.FlexboxLayout
        style="@style/menu_btn_flexbox"
        app:flexDirection="column">
        <ImageView
            style="@style/menu_btn_img"
            android:id="@+id/img_library"
            android:src="@drawable/menu_library" />
        <TextView
            style="@style/menu_btn_text"
            android:id="@+id/text_library"
            android:text="@string/menu_library"/>
    </com.google.android.flexbox.FlexboxLayout>

    <!-- Upload Button -->
    <com.google.android.flexbox.FlexboxLayout
        style="@style/menu_btn_flexbox"
        app:flexDirection="column">
        <ImageView
            style="@style/menu_btn_img"
            android:id="@+id/img_upload"
            android:src="@drawable/menu_upload" />
        <TextView
            style="@style/menu_btn_text"
            android:id="@+id/text_upload"
            android:text="@string/menu_upload"/>
    </com.google.android.flexbox.FlexboxLayout>

</com.google.android.flexbox.FlexboxLayout>