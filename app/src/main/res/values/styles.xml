<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/transparent</item>
        <item name="android:colorButtonNormal">@color/transparent</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
    </style>

    <!--<style name="image">-->
        <!--<item name="android:layout_width">wrap_content</item>-->
        <!--<item name="android:scaleType">centerInside</item>-->
    <!--</style>-->
    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Input form - text input layout for login, signup -->
    <style name="input_text_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>
    </style>
    <style name="input_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Input form - app compat button for login, signup -->
    <style name="input_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_btn</item>
        <item name="android:layout_marginTop">@dimen/_24sdp</item>
        <item name="android:layout_marginBottom">@dimen/_24sdp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Input form - link for login, signup -->
    <style name="input_link">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_24sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <!-- Menu option - button style -->
    <style name="menu_btn_flexbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
    </style>
    <style name="menu_btn_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_24sdp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="menu_btn_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <!-- Text style for normal text -->
    <style name="text_normal_white" parent="text">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:color">@color/white</item>
    </style>
    <style name="text_small_gray" parent="text">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:color">@color/oil</item>
    </style>

    <!-- Button playing title -->
    <style name="playing_title_btn">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
    </style>
    <!-- Button playing control -->
    <style name="playing_control_btn">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
    </style>

</resources>